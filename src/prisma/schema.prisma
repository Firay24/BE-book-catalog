// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  Id        String   @id
  Email     String   @unique
  Password  String
  Name      String
  RoleId    String
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
  Role      Role     @relation(fields: [RoleId], references: [Id], onDelete: Restrict)
}

model Role {
  Id        String   @id
  Name      String
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
  User      User[]
}

model Category {
  Id        String   @id
  Name      String
  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
  Book      Book[]
}

enum Thickness {
  THIN
  NORMAL
  THICK
}

model Book {
  Id          String    @id
  Title       String
  Description String
  ImageUrl    String
  ReleaseYear Int
  Price       Int
  TotalPage   Int
  Thickness   Thickness
  CategoryId  String
  CreatedAt   DateTime  @default(now())
  UpdatedAt   DateTime  @updatedAt
  Category    Category  @relation(fields: [CategoryId], references: [Id], onDelete: Restrict)
}
